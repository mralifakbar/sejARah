<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/bg_circle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    
    <View
        android:id="@+id/bg_circle_small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#FBD4D4"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_circle"
        app:layout_constraintBottom_toBottomOf="@id/bg_circle"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_sword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_circle_small"
        app:layout_constraintBottom_toBottomOf="@id/bg_circle_small"/>

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_circle"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/rect_kategori_kartu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_kategori_kartu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senjata Tradisional"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rect_kategori_kartu"
        app:layout_constraintBottom_toBottomOf="@id/rect_kategori_kartu"/>
</androidx.constraintlayout.widget.ConstraintLayout>