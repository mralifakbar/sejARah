<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:clickable="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:scaleType="centerCrop"
                android:layout_height="50dp"
                android:src="@drawable/blank_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/profile_image"
                app:layout_constraintBottom_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:text="Selamat Datang, "
                    android:includeFontPadding="false"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:elegantTextHeight="true"
                    android:text="User"
                    android:textColor="@color/primary_500"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal_kategori_kartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/profile_tab"
            app:layout_constraintStart_toStartOf="parent"
>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_kategori"
                    android:layout_width="150dp"
                    android:layout_height="170dp">

                    <View
                        android:id="@+id/bg_circle"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <View
                        android:id="@+id/bg_circle_small"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#FBD4D4"
                        android:background="@drawable/circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle"/>

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_sword"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_small"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle_small"/>

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/7"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/rect_kategori_kartu"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_kategori_kartu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senjata Tradisional"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/rect_kategori_kartu"
                        app:layout_constraintBottom_toBottomOf="@id/rect_kategori_kartu"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_kategori_2"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp">

                    <View
                        android:id="@+id/bg_circle_2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <View
                        android:id="@+id/bg_circle_small_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#FBD4D4"
                        android:background="@drawable/circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_2"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle_2"/>

                    <ImageView
                        android:id="@+id/iv_icon_2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_angklung"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_small_2"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle_small_2"/>

                    <TextView
                        android:id="@+id/tv_progress_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/7"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_2"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/rect_kategori_kartu_2"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_kategori_kartu_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alat Musik"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/rect_kategori_kartu_2"
                        app:layout_constraintBottom_toBottomOf="@id/rect_kategori_kartu_2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_kategori_3"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="16dp">

                    <View
                        android:id="@+id/bg_circle_3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <View
                        android:id="@+id/bg_circle_small_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#FBD4D4"
                        android:background="@drawable/circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_3"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle_3"/>

                    <ImageView
                        android:id="@+id/iv_icon_3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_tokoh"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_small_3"
                        app:layout_constraintBottom_toBottomOf="@id/bg_circle_small_3"/>

                    <TextView
                        android:id="@+id/tv_progress_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/7"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/bg_circle_3"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/rect_kategori_kartu_3"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_kategori_kartu_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokoh"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/rect_kategori_kartu_3"
                        app:layout_constraintBottom_toBottomOf="@id/rect_kategori_kartu_3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Terakhir Dilihat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_kategori_kartu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>